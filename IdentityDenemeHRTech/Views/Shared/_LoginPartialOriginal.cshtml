@using HRTechProject.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Yönet">Hoşgeldiniz @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <a class="btn-link text-decoration-none text-white btn btn-primary mx-1" asp-area="" asp-controller="Personel" asp-action="Index" title="Manage">Bilgilerim</a>
        </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="btn btn-danger" type="submit" class="nav-link btn btn-link text-dark">Çıkış</button>
        </form>
    </li>
}
else
{
    @* <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol</a>
    </li> *@
    <li class="nav-item">
            <a class="nav-link text-dark btn btn-primary text-white" asp-area="Identity" asp-page="/Account/Login">Giriş</a>
    </li>
}
</ul>
