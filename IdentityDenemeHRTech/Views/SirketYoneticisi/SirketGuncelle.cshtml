@using HRTechProject.Entities
@model ApplicationUser

@{
    ViewData["Title"] = "Şirket Güncelleme";
}

<div class="container py-3">
    <h2 class="row text-center d-flex justify-content-center border border-info rounded m-5 p-3" style="background-color:dodgerblue;color:white">@ViewData["Title"]</h2>

    <form method="post">
        <div class="border border-info rounded p-3 m-5" style="background-color:dodgerblue;color:white">
            <div class="mb-3">
                <label class="form-label">Fotoğraf Adresi</label>
                <input asp-for="FotografYolu" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Adres</label>
                <input asp-for="Adres" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control" />
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success mt-4">Güncelle</button>
                <a class="btn btn-danger mt-4 ms-2" asp-action="Index">İptal</a>
            </div>
        </div>
    </form>
</div>
