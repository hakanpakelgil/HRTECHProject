@using ApplicationCore.Entities
@using ApplicationCore.Enums
@model Izin

@{
    ViewData["Title"] = "İzin İptal";
}

<div class="container py-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">İzin İptal</h2>
                </div>
                <div class="card-body">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }
                    <form asp-action="IzınIptal" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Turu">İzin Türü:</label>
                            <select asp-for="Turu" class="form-control" disabled>
                                <option value="">Seçiniz</option>
                                <option value="@((int)IzinTuru.Hastalik)">Hastalık İzni</option>
                                <option value="@((int)IzinTuru.Babalik)">Babalık İzni</option>
                                <option value="@((int)IzinTuru.Hamilelik)">Hamilelik İzni</option>
                                <option value="@((int)IzinTuru.Olum)">Ölüm İzni</option>
                                <option value="@((int)IzinTuru.Diger)">Diğer</option>
                            </select>
                            <span asp-validation-for="Turu" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="BaslangicTarihi">Başlangıç Tarihi:</label>
                            <input asp-for="BaslangicTarihi" class="form-control" type="date" disabled />
                            <span asp-validation-for="BaslangicTarihi" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="BitisTarihi">Bitiş Tarihi:</label>
                            <input asp-for="BitisTarihi" class="form-control" type="date" disabled>
                            <span asp-validation-for="BitisTarihi" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-danger">İzni İptal Et</button>
                            <a class="btn btn-warning mx-4" asp-action="Izin">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
