@using ApplicationCore.Enums
@model AvansDuzenleViewModel

@{
    ViewData["Title"] = "Personel Avans Talebi Düzenleme";
}


@if (ViewBag.Validasyon != null)
{
    <div class="alert alert-danger">Alanları Düzgün ve Eksiksiz Doldurun.</div>
}
<h2 class="row text-center d-flex justify-content-center border border-info rounded m-5 p-3" style="background-color:dodgerblue;color:white">@ViewData["Title"]</h2>

<form method="post">
    <div class="border border-info rounded p-3 m-5" style="background-color:dodgerblue;color:white">
        <div class="mb-3">
            <label class="form-label">Avans Türü</label>
            <select asp-for="Tur" asp-items="Html.GetEnumSelectList<AvansTuru>()" class="form-control">
                <option value="">--Seçiniz--</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Harcama Tutarı</label>
            <input asp-for="Tutar" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <input asp-for="Aciklama" type="text" class="form-control"/>
        </div>        
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success mt-4">Avans Düzenle</button>
            <a class="btn btn-danger mt-4 ms-2" asp-action="Avanslarim">İptal</a>
        </div>
    </div>
</form>