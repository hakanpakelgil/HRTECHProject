@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<!-- Login 1 - Bootstrap Brain Component -->
<div class="bg-light py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
                <div class="bg-white p-1 p-md-4 rounded shadow-sm">
                    <div class="row">
                        <div class="col-12">
                            <div class="text-center">
                                <a href="#!">
                                    <img src="../../assets/img/logo.png"  width="175">
                                </a>
                            </div>
                        </div>
                    </div>
                    <form id="account" method="post">
                        <div class="row gy-1 gy-md-2 overflow-hidden">
                            <div class="col-12">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <label asp-for="Input.Email" class="form-label">E-mail: <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                        </svg>
                                    </span>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="isim.soyisim@hrtech.com" required/>
                                    
                                </div>
                            </div>
                            <div class="col-12">
                                <label asp-for="Input.Password" class="form-label">Şifre: <span class="text-danger">*</span></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                                            <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z" />
                                            <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                                        </svg>
                                    </span>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" required/>
                                    
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        Beni Hatırla
                                    </label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <button id="login-submit" class="btn btn-primary btn-lg" type="submit">Giriş Yap</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-12">
                            <hr class="mt-4 mb-2 border-secondary-subtle">
                            <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center">
                                @* <a href="#!" class="link-secondary text-decoration-none">Create new account</a> *@
                                <a id="forgot-password" asp-page="./ForgotPassword" class="link-secondary text-decoration-none">Şifremi Unuttum</a>
                                @* <a class="link-secondary text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                <a class="link-secondary text-decoration-none" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
